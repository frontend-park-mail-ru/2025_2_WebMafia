<div class='section' id="section">
  {{> header}}
  
  <div class='layout'>
    {{> sidebar}}
    <div class='page'>
      <div class='now-playing-container'>
        <div class='now-playing-container__title'>Сейчас играет</div>
        <div class='now-playing-container__cards'>
          <div class='now-playing-container__previous-card'>
            <img src='/static/img/image11.jpg' alt='' />
          </div>
          <div class='now-playing-container__current-card'>
            <img src='/static/img/image12.jpg' alt='' />
            <div class='controls-current-card'>
              <button class='current-card-btn prev'>⏮</button>
              <button class='current-card-btn play'>▶</button>
              <button class='current-card-btn next'>⏭</button>
            </div>
            <p class='current-card-name'>Queen</p>
          </div>
          <div class='now-playing-container__next-card'>
            <img src='/static/img/image13.jpg' alt='' />
          </div>
        </div>
      </div>
      <!-- Артисты -->
      <div class='title'>
        <div class='title-name'>Артисты</div>
        <div class='show-all'><a href='/show_all/artists'>Показать всё</a></div>
      </div>
      <div class='slider'>
        <p> <i class='slide-btn left'></i></p>
        <div class='cards' id='slidebar'>
          {{#each artists}}
            <div class='card'>
              <a href='/artist/{{artist_id}}'>
                <img src='{{image}}' alt='{{name}}' />
                <p class='card-name'>{{name}}</p>
              </a>
            </div>
          {{/each}}
        </div>
        <p> <i class='slide-btn right'></i></p>
      </div>

      <!-- Альбомы -->
      <div class='title'>
        <div class='title-name'>Альбомы</div>
        <div class='show-all'><a href='/show_all/albums'>Показать всё</a></div>
      </div>
      <div class='slider'>
        <i class='slide-btn left'></i>
        <div class='cards' id='slidebar'>
          {{#each albums}}
            <div class='card'>
              <a href='/album/{{album_id}}'>
                <img src='{{image}}' alt='{{name}}' />
                <p class='card-name'>{{name}}</p>
                <p class='card-sub'>{{artist}}</p>
              </a>
            </div>
          {{/each}}
        </div>
        <i class='slide-btn right'></i>
      </div>

      <!-- Треки -->
      <div class='title'>
        <div class='title-name'>Треки</div>
        <div class='show-all'><a href='/show_all/tracks'>Показать всё</a></div>
      </div>
      <div class='slider'>
        <p> <i class='slide-btn left'></i></p>
        <div class='cards' id='slidebar'>
          {{#each tracks}}
            <div class='card'>
              <a href='/album/{{album.album_id}}'><img
                  src='{{image}}'
                  alt='{{name}}'
                />
                <p class='card-name'>{{name}}</p>
                {{#each artists}}
                  <p class='card-sub'>{{name}}</p>
                {{/each}}
              </a>
            </div>
          {{/each}}
        </div>
        <p> <i class='slide-btn right'></i></p>
      </div>

    </div>
  </div>

 
</div>